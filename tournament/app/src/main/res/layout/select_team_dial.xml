<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <android.support.v7.widget.RecyclerView
    android:id="@+id/select_team_list"
    android:layout_width="300dp"
    android:layout_height="400dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/select_team_add_bttn"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/mt_space_small"
      android:layout_weight="1"
      android:foreground="@drawable/accent_ripple"
      android:gravity="center"
      android:padding="@dimen/mt_space_small"
      android:text="Add Team"/>

    <TextView
      android:id="@+id/select_team_cancel_bttn"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/mt_space_small"
      android:layout_weight="1"
      android:foreground="@drawable/accent_ripple"
      android:gravity="center"
      android:padding="@dimen/mt_space_small"
      android:text="Cancel"/>

  </LinearLayout>
</LinearLayout>