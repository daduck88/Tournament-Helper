<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/mt_space_medium">

  <android.support.design.widget.TextInputLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/add_team_title_inpt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/team_title"/>
  </android.support.design.widget.TextInputLayout>

  <TextView
    android:id="@+id/add_team_bttn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mt_space_small"
    android:foreground="@drawable/accent_ripple"
    android:gravity="center"
    android:padding="@dimen/mt_space_small"
    android:text="@string/add_team"/>
</LinearLayout>